# Include additional files in the distribution

# Documentation
include README.md
include LICENSE
include CHANGELOG.md
include *.md
include *.yaml
include *.yml
include *.json

# Configuration files
include example_config.json
include fastgraph.yaml
include fastgraph.yml

# Development files
include requirements.txt
include requirements-dev.txt
include .pre-commit-config.yaml

# Examples
recursive-include examples *.py
recursive-include examples *.json
recursive-include examples *.yaml

# Tests
recursive-include tests *.py
recursive-include tests *.json
recursive-include tests *.yaml

# Documentation (if exists)
recursive-include docs *.md
recursive-include docs *.rst
recursive-include docs *.py
recursive-exclude docs/_build

# Exclude development and cache files
exclude .gitignore
exclude .coverage
exclude pytest.ini
exclude .mypy_cache
exclude .pytest_cache
exclude *.egg-info
exclude .DS_Store
exclude Thumbs.db

# Exclude development directories
prune .git
prune .pytest_cache
prune .mypy_cache
prune .coverage
prune htmlcov
prune build
prune dist
prune **/__pycache__
prune **/*.pyc
prune **/*.pyo